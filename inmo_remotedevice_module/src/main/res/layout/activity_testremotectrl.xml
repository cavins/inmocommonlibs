<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/backBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:onClick="testInputKey"
            android:text="模拟戒指返回键" />

        <Button
            android:id="@+id/centerBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backBt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:onClick="testInputKey"
            android:text="模拟戒指确定键" />

        <Button
            android:id="@+id/nextBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/centerBt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:onClick="testInputKey"
            android:text="模拟戒指下一步键" />

        <Button
            android:id="@+id/previousBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nextBt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:onClick="testInputKey"
            android:text="模拟戒指上一步键" />


    </RelativeLayout>
</layout>